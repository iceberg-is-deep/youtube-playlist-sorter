{
  "name": "youtube-playlist-manager",
  "description": "Manage YouTube playlists",
  "repository": {
    "type": "git"
  },
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "npm run build:bundle && npm run build:background",
    "build:bundle": "browserify src/playlist-manager.js -o extension/bundle.js -t [ babelify --presets [ es2015 ] ]",
    "build:background": "browserify src/background.js -o extension/background.js -t [ babelify --presets [ es2015 ] ]",
    "watch": "npm run watch:bundle && npm run watch:background",
    "watch:bundle": "watchify src/playlist-manager.js -o extension/bundle.js -t [ babelify --presets [ es2015 ] ]",
    "watch:background": "watchify src/background.js -o extension/background.js -t [ babelify --presets [ es2015 ] ]"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "watchify": "^3.9.0"
  }
}
